<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itemIV"
            android:layout_width="95dp"
            android:layout_height="115dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/nameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#242222"
            android:text="Carman original" />

        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/classTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="[ 1.00 EA ]" />

        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/priceTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#131111"
            android:textStyle="bold"
            android:text="\u09F3 650"/>

        <!--bottom part-->
        <RelativeLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cartRemoveIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:src="@drawable/delete" />
            <ImageView
                android:id="@+id/cartSub"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sub"/>
            <TextView
                android:id="@+id/addToTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Bag"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#16D6AA"/>

            <TextView
                android:id="@+id/TotalTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="1"
                android:visibility="invisible"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/cartAddIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/add"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>